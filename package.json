{
  "name": "@peach-three-o/tableware",
  "version": "0.0.3",
  "description": "안 먹어보면 억울해 공식 모듈 라이브러리",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-all-packages": "turbo run build lint && changeset version && changeset publish",
    "show-changeset-version": "changeset version"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-sonwonjae:peach-three-O/Tableware.git"
  },
  "author": "sonwonjae",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "changeset": "latest",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "dependencies": {
    "@peach-three-o/components": "*",
    "@peach-three-o/hooks": "*"
  }
}
